extends ../base

block vars
  - var title = 'Login'

block body
  .row
    .col-sm-6.col-sm-offset-3
      .panel.panel-default
        .panel-body
          h2.page-header.m-t-m Login to your Account
            
          form(method="post", action="/users/login") 
            .form-group
              label Email
              input.form-control(type="email", name="email", placeholder="Email", required=true)
            .form-group
              label Password
              input.form-control(type="password", name="password", placeholder="Password", required=true)
            button.btn.btn-default(type="submit") Submit

        .panel-footer
          a(href="/users/register") Don't have an account? Register here