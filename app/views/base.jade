block vars
doctype html
html
  head
    title #{title}

    meta(name="viewport", content="width=device-width,initial-scale=1")
    meta(name="description", content="")
    link(rel="stylesheet" href="/css/styles.css")

    script(data-main="js/main", src="js/libs/require/require.js")

  body
    .navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar")
            span.sr-only Toggle navigation
            .icon-bar
            .icon-bar
            .icon-bar
          a.navbar-brand(href="/") Toolsio
      
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active 
              a(href="#") Home
            li.about 
              a(href="#about") About
            li.contact 
              a(href="#contact") Contact  
            li.projects 
              a(href="#projects") Projects
            li.dashboard 
              a(href="#projects") Dashboard  

          .navbar-form.navbar-right        
            .form-group
              a.btn.btn-primary(href="/users/register") Register        
            .form-group
              a.btn.btn-primary(href="/users/login") Login   
            .form-group
              a.btn.btn-primary(href="/users/logout") Logout      
       
    //- Initially populated by templates/layout.html
    section
      .container      
        div(style="clear: both;")
        .page 
          Loading
          block body
        div(style="clear: both;")
   
    footer.footer
      .container
        p.text-muted Toolsio &copy; 2017 

